{
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 105
  },
  "linter": {
    "enabled": true,
    "rules": {
      "suspicious": {
        "noExplicitAny": "off"
      },
      "complexity": {
        "noForEach": "off"
      },
      "style": {
        "noParameterAssign": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  },
  "files": {
    "ignore": [
      "build/assets/*.js",
      "dist/**/*",
      "node_modules/**/*"
    ]
  }
}
