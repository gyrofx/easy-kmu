{
  "name": "@easy-kmu/pdf",
  "description": "Service to generate PDFs",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "yarn start",
    "start": "TZ=UTC yarn run dev:server",
    "dev:server": "yarn tsup src/server/index.ts --watch --onSuccess \"node dist/index.js\"",
    "monitor:redis": "redis-cli monitor",
    "build": "yarn tsc && NODE_ENV=production INLINE_RUNTIME_CHUNK=false yarn tsup src/server/index.ts",
    "test": "TZ=UTC vitest",
    "lint": "biome lint --apply ./src && tsc --noEmit",
    "lint:check": "biome lint ./src",
    "format": "biome format --write ./src",
    "format:check": "biome format --check ./src",
    "tsc:watch": "tsc --watch --noEmit --project tsconfig.json",
    "cert": "mkdir -p certs && mkcert -key-file certs/server.key -cert-file certs/server.pem worklog.localhost localhost 127.0.0.1",
    "docker:build": "yarn buildinfo:update && docker build -t worklog . && docker tag worklog nightfury5432/worklog",
    "docker:push": "docker push nightfury5432/worklog",
    "buildinfo:dummy": "cp -f src/buildInfo.ts.dummy src/buildInfo.ts",
    "buildinfo:update": "bun run src/scripts/updateBuildInfo.ts",
    "certs:all": "bun run certs:server",
    "certs:server": "mkdir -p certs && mkcert -key-file certs/server-key.pem -cert-file certs/server-cert.pem worklog.localhost localhost",
    "scripts:datamigration:jiraId": "bun run prisma/migrations/20240303194847_jira_id/data-migration.ts",
    "scripts:qrbill": "yarn run ts-node -r tsconfig-paths/register src/scripts/qrbill.ts",
    "scripts:render": "yarn run ts-node -r tsconfig-paths/register src/scripts/render.ts"
  },
  "dependencies": {
    "@easy-kmu/common": "*",
    "@fontsource/playfair-display": "^5.0.24",
    "@fontsource/roboto": "^5.0.13",
    "@fontsource/roboto-slab": "^5.0.20",
    "@ts-rest/core": "^3.45.2",
    "@ts-rest/express": "^3.45.2",
    "@types/connect-redis": "^0.0.23",
    "@types/node": "^20.13.0",
    "@types/tmp": "^0.2.6",
    "@types/uuid": "^9.0.8",
    "conditional-type-checks": "^1.0.6",
    "connect-redis": "^7.1.1",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "immer": "^10.1.1",
    "ioredis": "^5.4.1",
    "lodash-es": "^4.17.21",
    "marked": "^13.0.2",
    "pagedjs": "^0.4.3",
    "pagedjs-cli": "^0.4.3",
    "remove-accents": "^0.5.0",
    "swissqrbill": "^4.0.2",
    "typescript": "^5.4.5",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "@types/handlebars": "^4.1.0",
    "@types/lodash": "^4.17.4",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.2",
    "rimraf": "^5.0.7",
    "ts-node": "^10.9.2",
    "ts-prune": "^0.10.3",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.1.0",
    "vite": "^5.2.12",
    "vite-plugin-svgr": "^4.2.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0",
    "vitest-dom": "^0.1.1",
    "vitest-sonar-reporter": "^2.0.0",
    "wait-on": "^7.2.0"
  },
  "author": "Felix Eichenberger <felix.eichenberger@gmail.com>"
}
